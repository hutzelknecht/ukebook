{
  "name": "Song",
  "plural": "Songs",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "tab": {
      "type": "string",
      "postgresql": {
        "columnName": "tab",
        "dataType": "text"
      }
    },
    "title": {
      "type": "string",
      "required": true
    },
    "author": {
      "type": "string"
    },
    "owner": {
      "type": "string"
    }
  },
  "indexes": {
    "title_by_author": { "keys": { "title": 1, "author": 1 } },
    "author":          { "keys": { "author": 1 } }
  },
  "validations": [],
  "relations": {},
  "acls": [{
    "comment":"allow viewing a list of songs",
    "accessType": "READ",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "ALLOW",
    "property": "find"
  },{
    "comment":"allow viewing a song",
    "accessType": "READ",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "ALLOW",
    "property": "findById"
  },{
    "comment":"allow editors to edit a song",
    "accessType": "WRITE",
    "principalType": "ROLE",
    "principalId": "2",
    "permission": "ALLOW",
    "property": "*"
  },{
    "comment":"allow admins to edit a song",
    "accessType": "WRITE",
    "principalType": "ROLE",
    "principalId": "1",
    "permission": "ALLOW",
    "property": "*"
  }],
  "methods": {}
}
