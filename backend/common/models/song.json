{
  "name": "Song",
  "plural": "Songs",
  "base": "PersistedModel",
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "properties": {
    "tab": {
      "type": "string",
      "postgresql": {
        "columnName": "tab",
        "dataType": "text"
      }
    },
    "title": {
      "type": "string",
      "required": true
    },
    "author": {
      "type": "string"
    },
    "owner": {
      "type": "string"
    }
  },
  "indexes": {
    "title_by_author": { "keys": { "title": 1, "author": 1 } },
    "author":          { "keys": { "author": 1 } }
  },
  "validations": [],
  "relations": {},
  "acls": [{
    "comment":"first of all deny everything for everyone",
    "accessType": "*",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "DENY"
  },{
    "comment":"everyone can view a list of songs",
    "accessType": "READ",
    "principalType": "ROLE",
    "principalId": "$everyone",
    "permission": "ALLOW",
    "property": "find"
  },{
    "comment":"everyone can view a song",
    "accessType": "READ",
    "principalType": "ROLE",
    "principalId": "$authenticated",
    "permission": "ALLOW",
    "property": "findById"
  },{
    "comment":"everyone can print a pdf",
    "accessType": "EXECUTE",
    "principalType": "ROLE",
    "principalId": "$authenticated",
    "permission": "ALLOW",
    "property": "pdf"
  },{
    "comment":"editors can edit a song",
    "accessType": "WRITE",
    "principalType": "ROLE",
    "principalId": "editor",
    "permission": "ALLOW",
    "property": "*"
  },{
    "comment":"admins can also edit a song",
    "accessType": "WRITE",
    "principalType": "ROLE",
    "principalId": "admin",
    "permission": "ALLOW",
    "property": "*"
  },{
"comment":"users cannot edit a song whatsoever",
    "accessType": "WRITE",
    "principalType": "ROLE",
    "principalId": "admin",
    "permission": "DENY",
    "property": "*"
}],
  "methods": {}
}
